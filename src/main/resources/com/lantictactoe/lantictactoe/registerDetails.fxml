<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="anchorPan" prefHeight="259.0" prefWidth="459.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.lantictactoe.lantictactoe.Controllers.RegisterDetailsController">
   <children>
      <Label fx:id="enterUsernameLabel" layoutX="44.0" layoutY="40.0" text="Enter Username :">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <Label fx:id="passwordLabel" layoutX="86.0" layoutY="85.0" text="Password :">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <Label fx:id="repeatPasswordLabel" layoutX="40.0" layoutY="126.0" text="Repeat Password :">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <TextField fx:id="enterUsernameTextField" layoutX="192.0" layoutY="37.0" prefHeight="26.0" prefWidth="162.0" onMouseClicked="#clearWarningLabel" />
      <TextField fx:id="passwordTextField" layoutX="192.0" layoutY="82.0" prefHeight="26.0" prefWidth="162.0" onMouseClicked="#clearWarningLabel"/>
      <TextField fx:id="repeatPasswordTextField" layoutX="192.0" layoutY="124.0" prefHeight="26.0" prefWidth="162.0" onMouseClicked="#clearWarningLabel"/>
      <Button fx:id="enterButton" layoutX="238.0" layoutY="210.0" mnemonicParsing="false" onAction="#onEnterButtonClick" prefHeight="34.0" prefWidth="70.0" text="Enter">
         <font>
            <Font size="15.0" />
         </font>
      </Button>
      <Label fx:id="warningLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="2.0" layoutY="178.0" prefHeight="18.0" prefWidth="452.0" textFill="#ea0d0d">
         <font>
            <Font size="13.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
